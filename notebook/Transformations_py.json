					"def transform(tableName):\r\n",
					"\r\n",
					"    try:\r\n",
					"        df = spark.read.load(f\"{tableName.path}\", format='delta')\r\n",
					"        return transformation(df, tableName.name)\r\n",
					"\r\n",
					"    except AnalysisException as e:\r\n",
